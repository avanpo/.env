[colors]
bg = ${xrdb:bar-bg:#000}
bg-active = ${xrdb:bar-bg-active:#333}
text = ${xrdb:foreground:#ccc}
icon = ${xrdb:color8:#999}
active = ${xrdb:foreground:#fff}
inactive = ${xrdb:color8:#999}
alert = ${xrdb:color5:#f00}

[settings]
throttle-output = 5
screenchange-reload = true

[global/wm]

[bar/main]
monitor = ${env:MONITOR:}
bottom = true
width = 100%
height = 40
fixed-center = true
line-size = 0
background = ${colors.bg}
foreground = ${colors.text}
tray-position = none

font-0 = "DejaVu Sans Mono:size=12:weight=bold;3"
font-1 = "Font Awesome 6 Free:style=Solid:size=11;3"
font-2 = "Font Awesome 5 Free:style=Solid:size=11;3"

modules-left = i3
modules-center = weather
modules-right = pulseaudio backlight wlan eth vpn battery date

[module/i3]
type = internal/i3
pin-workspaces = true
index-sort = true

format = <label-state> <label-mode>

label-mode = %mode%
label-mode-foreground = ${colors.active}
label-mode-background = ${colors.bg-active}
label-mode-padding = 1

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-foreground = ${colors.active}
label-focused-background = ${colors.bg-active}
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-foreground = ${colors.inactive}
label-unfocused-padding = 1

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-foreground = ${colors.inactive}
label-visible-background = ${colors.bg-active}
label-visible-padding = 1

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-foreground = ${colors.alert}
label-urgent-padding = 1

[module/weather]
type = custom/script
interval = 60
format = <label>
label-padding = 1
exec = ~/.env/polybar/weather.py

[module/vpn]
type = custom/script
interval = 2
format = <label>
label-padding = 1
exec = ~/.env/polybar/vpn.sh

[module/backlight]
type = internal/backlight
card = ${env:BACKLIGHT:}
format = " <label>"
label = %percentage%%
format-foreground = ${colors.icon}
format-padding = 1
label-foreground = ${colors.text}

[module/wlan]
type = internal/network
interface = ${env:WIRELESS_INTERFACE:}
interval = 3.0

format-connected =  <label-connected>
label-connected = %signal%%

format-disconnected =  <label-disconnected>
label-disconnected = 0%

format-connected-foreground = ${colors.icon}
label-connected-foreground = ${colors.text}
format-connected-padding = 1

format-disconnected-foreground = ${colors.icon}
label-disconnected-foreground = ${colors.text}
format-disconnected-padding = 1

[module/eth]
type = internal/network
interface = ${env:WIRED_INTERFACE:}
interval = 3.0

format-connected =  <label-connected>
label-connected = %linkspeed%

format-connected-foreground = ${colors.icon}
label-connected-foreground = ${colors.text}
format-connected-padding = 1

[module/date]
type = internal/date
interval = 1

date = %b %d
time = %H:%M

format =  <label>
label = %date% %time%

format-foreground = ${colors.icon}
format-padding = 1

label-foreground = ${colors.text}

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <ramp-volume> <label-volume>
format-muted =  mute

label-volume = %percentage%%

format-volume-padding = 1
format-muted-foreground = ${colors.icon}
format-muted-padding = 1
label-muted-foreground = ${colors.text}

ramp-volume-foreground = ${colors.icon}
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-headphones-0 = 
ramp-headphones-1 = 

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charging = <animation-charging> <label-charging>
format-full = <ramp-capacity> <label-full>
format-discharging = <ramp-capacity> <label-discharging>

format-charging-padding = 1
format-full-padding = 1
format-discharging-padding = 1

ramp-capacity-foreground = ${colors.icon}
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-0-foreground = ${colors.alert}

animation-charging-foreground = ${colors.icon}
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate = 500

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
format-warn = <ramp> <label-warn>

format-padding = 2
format-warn-padding = 2

label = %temperature%
label-warn = %temperature%
label-warn-foreground = ${colors.alert}

ramp-foreground = ${colors.icon}
ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 
ramp-4 = 
