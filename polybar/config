[colors]
bg = ${xrdb:bar-bg:#000}
bg-active = ${xrdb:bar-bg-active:#666}
text = ${xrdb:color5:#f0f}
icon = ${xrdb:color5:#f0f}
active = ${xrdb:color15:#fff}
alert = ${xrdb:color1:#f00}

[settings]
throttle-output = 5
screenchange-reload = true

[global/wm]

[bar/main]
monitor = ${env:MONITOR:}
bottom = true
width = 100%
height = 35
fixed-center = true

background = ${colors.bg}
foreground = ${colors.text}

line-size = 0

font-0 = DejaVu Sans Mono:pixelsize=12;3
font-1 = FontAwesome 5 Free:style=Regular:pixelsize=11;3
font-2 = FontAwesome 5 Free:style=Solid:pixelsize=11;3
font-3 = FontAwesome:pixelsize=11;3

modules-left = i3
modules-center = weather
modules-right = volume xbacklight cpu memory temperature wlan battery date

tray-position =

[module/i3]
type = internal/i3
pin-workspaces = true
index-sort = true

format = <label-state> <label-mode>

label-mode = %mode%
label-mode-foreground = ${colors.text}
label-mode-padding = 1

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-foreground = ${colors.active}
label-focused-background = ${colors.bg-active}
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 1

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-padding = 1

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-foreground = ${colors.alert}
label-urgent-padding = 1

[module/weather]
type = custom/script
interval = 15
format = <label>
exec = ~/.env/polybar/weather.py

[module/mpd]
type = internal/mpd
format-online = <label-song>  <icon-prev> <icon-stop> <toggle> <icon-next>

icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 

label-song-maxlen = 25
label-song-ellipsis = true

[module/xbacklight]
type = internal/xbacklight

format = " <label>  "
label = %percentage%%

format-foreground = ${colors.icon}
format-padding = 2

label-foreground = ${colors.text}

[module/cpu]
type = internal/cpu
interval = 2

format = " <label>/"
label = %percentage%%

format-foreground = ${colors.icon}
label-foreground = ${colors.text}
format-padding = 0

[module/memory]
type = internal/memory
interval = 2

format = "<label>  "
label = %gb_used%

label-foreground = ${colors.text}
format-padding = 0

[module/wlan]
type = internal/network
interface = ${env:WIRELESS_INTERFACE:}
interval = 3.0

format-connected =  <label-connected>
label-connected = %signal%%

format-disconnected =  <label-disconnected>
label-disconnected = 0%

format-connected-foreground = ${colors.icon}
label-connected-foreground = ${colors.text}
format-connected-padding = 2

format-disconnected-foreground = ${colors.icon}
label-disconnected-foreground = ${colors.text}
format-disconnected-padding = 2

[module/eth]
type = internal/network
interface = ${env:WIRED_INTERFACE:}
interval = 3.0

format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %local_ip%

format-disconnected =
;format-disconnected = <label-disconnected>
;label-disconnected = %ifname% disconnected

[module/date]
type = internal/date
interval = 1

date = %b %d
time = %H:%M

format =  <label>
label = %date% %time%

format-foreground = ${colors.icon}
format-padding = 2

label-foreground = ${colors.text}

[module/volume]
type = internal/volume

format-volume = <ramp-volume> <label-volume>
format-muted =   m

label-volume = %percentage%%

format-volume-padding = 2
format-muted-foreground = ${colors.icon}
format-muted-padding = 2

ramp-volume-foreground = ${colors.icon}
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-headphones-0 = 
ramp-headphones-1 = 

label-muted-foreground = ${colors.text}

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charging = <animation-charging> <label-charging>
format-full = <ramp-capacity> <label-full>
format-discharging = <ramp-capacity> <label-discharging>

format-charging-padding = 2
format-full-padding = 2
format-discharging-padding = 2

ramp-capacity-foreground = ${colors.icon}
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-0-foreground = ${colors.alert}

animation-charging-foreground = ${colors.icon}
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate = 500

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
format-warn = <ramp> <label-warn>

format-padding = 2
format-warn-padding = 2

label = %temperature%
label-warn = %temperature%
label-warn-foreground = ${colors.alert}

ramp-foreground = ${colors.icon}
ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 
ramp-4 = 
